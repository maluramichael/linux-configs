super + ctrl + F1
	bspc wm -r && notify-send "bspwm" "bspwm reloaded"

super + ctrl + F2
	pkill -USR1 -x sxhkd && notify-send "sxhkd reloaded"

super + ctrl + F3
	polybar-msg cmd restart && notify-send "polybar reloaded"


