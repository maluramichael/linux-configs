# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	$HOME/.local/bin/rofi -show combi

super + F12
	$HOME/.local/bin/changewallpaper && notify-send "wallpaper changed"

# Screenshots
Print
	exec $HOME/.local/bin/screenshot

ctrl + Print
	exec $HOME/.local/bin/screenshot -c

